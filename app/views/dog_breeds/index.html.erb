<%- model_class = DogBreed -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Dog Breed Group</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>

    </tr>
  </thead>

  <tbody>
    <% @dog_breeds.each do |dog_breed| %>
      <tr>
        <td><%= dog_breed.id %></td>
        <td><%= link_to dog_breed.name, dog_breed_path(dog_breed) %></td>
        <td><%= dog_breed.dog_breed_group != nil ? dog_breed.dog_breed_group.name : "No Group"%></td>
        <td><%= link_to 'Edit', edit_dog_breed_path(dog_breed) %>
        <%= link_to 'Destroy', dog_breed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => [:'helpers.links.new', 'New %{model}'],
                        :model => model_class.model_name.human.titleize), new_dog_breed_path,
            :class => 'btn btn-success' %>
